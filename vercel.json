{
  "version": 2,
  "builds": [
    {
      "src": "dist/main.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "dist/main.js"
    }
  ],
  "env": {
    "PORT": "3000",
    "DB_HOST": "your-db-host",
    "DB_PORT": "5433",
    "DB_USER": "postgres",
    "DB_PASS": "postgres",
    "DB_NAME": "candidate_db",
    "EMAIL_MOCK_URL": "http://localhost:4010"
  }
}
